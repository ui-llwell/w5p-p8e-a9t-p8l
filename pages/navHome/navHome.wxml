<view class='swiper'>
    <swiper indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" duration="{{duration}}" interval='{{interval}}' bindchange="bindchange"  circular="{{circular}}" style="height:{{imgheights[current]}}rpx;">
    <block wx:for='{{imgList}}' wx:key="{{index}}">
      <swiper-item>
        <image src="{{item.image}}" data-id='{{index}}' class="slide-image" mode="widthFix" bindload="imageLoad"/>
        <view class='swiper_text'>
          <text class='swiper_textIntroduce'>{{item.text1}}</text>
          <text class='swiper_textIntroduce'>{{item.text2}}</text>
          <text class='swiper_textLink'>{{item.text3}}</text>
        </view>
      </swiper-item>
      </block>
    </swiper>
  </view>
  
  <view class='consumption'>
    <view class='consumption_wrap' wx:for='{{ConsumptionList}}' wx:key='{{index}}' data-index='{{index}}' bindtap='consumption'>
      <view class='consumption_wrap_Black'></view>
      <view class='consumption_wrapImg' >
        <image src='{{item.img}}'></image>
      </view>
      <view class='consumption_wrapName'>
        {{item.name}}
      </view>
      <view class='consumption_wrapAddress'>
        <view> 地址：{{item.address}}</view>
      </view>
      <view class='consumption_wrapIphone'>
        <view>联系电话：{{item.iphone}}</view>
      </view>
    </view>
    
  </view>