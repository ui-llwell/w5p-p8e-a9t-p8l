page{
  height: 100%;
}
.index{
  position: relative;
  width:750rpx;
  height: 100%;
  background-image: -webkit-linear-gradient(45deg, rgb(247,112,98), rgb(254,81,150)); 
}
.wrap{
  width: 650rpx;
  padding:25rpx;
  /* margin: 35rpx 0; */
  height: 90%;
  background: #fff;
  box-shadow: 0 10px 20px 0 rgba(0,0,0,0.20);
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.h2 {
  font-size: 36rpx;
  text-align: center;
  padding: 10rpx 0 20rpx;
}
.content {
  font-size: 24rpx;
  display: block;
  width: 100%;
  height: 730rpx;
  overflow: scroll;
}
.service {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin-left: 500rpx;
  position: relative;
}
.service image {
  width: 100%;
  height: 100%;
}
.service_click {
  position: absolute;
  left:26rpx;
  top:15rpx;
}
.but {
  font-size: 28rpx;
  width: 608rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background-image: linear-gradient(-45deg, #F77062 0%, #FE5196 100%);
box-shadow: 0 4px 8px 0 rgba(0,0,0,0.20);
border-radius: 2px;
  margin-top: 46rpx;
  position: relative;
}
.but_clickd {
  width: 608rpx;
  height: 100rpx;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
}

