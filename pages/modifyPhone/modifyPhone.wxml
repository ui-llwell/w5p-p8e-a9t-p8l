<!--pages/modifyPhone/modifyPhone.wxml-->
<!-- <text>我的手机号</text> -->
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class='iphone'>
    <view class='iphone_left'>
      手机号码 <input type='text' name='phone' placeholder='输入手机号'></input>
    </view>
    <view class='iphone_right' >获取验证码</view>
  </view>
  <view class='iphone'>
    <view class='iphone_left'>
      验证码 <input name="verificationCode" type='text' placeholder='输入手机号'></input>
    </view>
  </view>
  <view class="weui-msg__extra-area" >
    <view class="weui-footer">
        <button class='ok' formType="submit">确定</button>
    </view>
  </view>
</form>

