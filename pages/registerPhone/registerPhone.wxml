<!--pages/registerPhone/registerPhone.wxml-->
<!-- <text>注册手机</text> -->
<view class='page'>
  <view class="container">
    <view class="userinfo">
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
      <block wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </block>
    </view>
  </view>  
  <view class='content'>
    <form bindsubmit="formSubmit" bindreset="formReset">
      <input type='number' maxlength='11'  class='content_iphone' name='iphone' bindinput="phoneInput" placeholder='手机号' placeholder-class="center" ></input>
      <input type="digit" class='content_VerificationCode' name='verificationCode' maxlength='6' placeholder='验证码' placeholder-class="center"></input>
      <!-- <view class='content_obtain'>获取验证码</view> -->
      <!-- style="background-color:{{color}}" -->
      <button class='content_obtain ' bindtap="bindButtonTap" disabled='{{disabled}}' >{{text}}</button>
      <button class='content_next' bindtap='next' style='border:1rpx solid #ccc;'  disabled='{{no}}' formType="submit">开始使用</button>
    </form>
  </view>
</view>