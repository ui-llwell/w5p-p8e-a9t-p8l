    border-bottom: 1px solid #E5E5E5;
    display: flex;
    align-items:center;
  }
  .add input {
    flex: 1
  }
  .add-li {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #888888;
    padding:20rpx 30rpx;
  }
  .add-li text {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    border: 1px solid #888;
