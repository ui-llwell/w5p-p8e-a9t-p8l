  .upload {
    width: 690rpx;
    padding:20rpx 30rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #888888;
  }
  .effect {
    width: 690rpx;
    height: 116rpx;
    padding: 30rpx;
    background: #fff;
    position: relative;

  }
  .effect text {
    width: 116rpx;
    height: 116rpx;
    line-height: 116rpx;
    text-align: center;
    display: block;
    border: 1px solid #ccc;
    color: #ccc;
    font-size: 55rpx;
  }
  .cardImg {
    position: absolute;
    left: 30rpx;
    top: 30rpx;

  }
  .cardImg image {
    display: block;
    width: 116rpx;
    height: 116rpx;
  }
  .add {
    width: 690rpx;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 30rpx;
    background: #fff;
